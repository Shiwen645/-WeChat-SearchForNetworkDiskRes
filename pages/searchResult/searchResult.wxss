/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 搜索头部 */
/* 调整搜索栏布局 */
.search-header {
  display: flex;
  padding: 12px 15px;
  /* 减小上下间距 */
  align-items: center;
  gap: 8px;
  /* 添加元素间距 */
}

.search-bar {
  flex: 1;
  background: #f5f5f5;
  border-radius: 20px;
  padding: 8px 15px;
  display: flex;
  align-items: center;
}

.search-bar {
  min-width: 0;
  /* 防止内容溢出 */
}

.search-bar icon {
  margin-right: 8px;
}

.search-bar input {
  flex: 1;
  font-size: 14px;
}

/* 输入框优化 */
.search-bar input {
  font-size: 14px;
  line-height: 1.5;
}

.placeholder {
  color: #999;
}

.search-btn {
  margin-left: 10px;
  background: #07c160;
  color: white;
  border-radius: 20px;
  font-size: 14px;
  padding: 0 15px;
  height: 36px;
  line-height: 36px;
}

/* 结果卡片 */
.result-container {
  height: calc(100vh - 100rpx);
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.result-card {
  background: #fff;
  border-radius: 8px;
  margin: 10px 0;
  padding: 15px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.title {
  flex: 1;
  font-size: 13px;
  font-weight: 500;
  color: #333;
  word-break: break-all;
}

.source {
  margin-left: 10px;
  font-size: 12px;
  color: #07c160;
  white-space: nowrap;
}

.card-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  font-size: 12px;
  color: #999;
  gap: 8px;
}

.file-icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

.tag {
  background: #f0f7ff;
  color: #07c160;
  padding: 2px 8px;
  border-radius: 4px;
  margin-right: 10px;
}

.time {
  margin-right: 10px;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 10px;
  font-size: 12px;
  color: #07c160;
  background: transparent;
  border: 1px solid #07c160;
  border-radius: 4px;
  padding: 0 8px;
  height: 28px;
  line-height: 28px;
}

.action-btn::after {
  border: none;
}

.action-btn icon {
  margin-right: 3px;
  vertical-align: middle;
}

/* 加载状态 */
.loading-status {
  padding: 20px 0;
  text-align: center;
  color: #999;
  font-size: 14px;
}

.loading-icon,
.empty-icon {
  width: 60px;
  height: 60px;
  margin-bottom: 10px;
}

/* ===== 修改所有绿色(#07c160)为蓝色 ===== */
.search-btn {
  background: #2196F3;
  /* 改为蓝色 */
}

.source {
  color: #2196F3;
  /* 改为蓝色 */
}

.tag {
  background: #e3f2fd;
  /* 浅蓝背景 */
  color: #2196F3;
  /* 蓝色文字 */
}

.action-btn {
  color: #2196F3;
  /* 蓝色文字 */
  border: 1px solid #2196F3;
  /* 蓝色边框 */
}

/* ===== 新增高亮样式 ===== */
.title em {
  color: #2196F3;
  /* 高亮关键词 */
  font-style: normal;
}

/* 输入框聚焦效果 */
.search-bar input {
  transition: all 0.3s;
}

.search-bar input:focus {
  box-shadow: 0 0 0 2px rgba(33, 150, 243, 0.2);
}

/* 小屏幕适配 */
@media (max-width: 320px) {
  .search-btn {
    width: 70px;
    font-size: 13px;
  }
}
/* 暂不搜索 */
empty-icon{
  width: 40px;
  height: 40px;
  margin: 10px 0px;
}