.container {
  height: 100vh;
  background-color: #f5f5f5;
}

.search-box {
  display: flex;
  padding: 15px;
  background-color: #2196F3;
}

.search-input {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 10px;
  border: 1px solid #eee;
  border-radius: 4px;
  margin-right: 10px;
  background-color: white;
}

.search-input icon {
  margin-right: 5px;
}

.search-input input {
  flex: 1;
  height: 32px;
  font-size: 14px;
}

.search-btn {
  height: 34px;
  min-width: 80px;
  line-height: 34px;
  font-size: 14px;
  background-color: #fff;
  color: #1989fa;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10px;
}

.section {
  margin: 15px;
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  display: flex;
  justify-content: space-between;
}

.clear-btn {
  color: #999;
  font-size: 14px;
  font-weight: normal;
}

.tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 5px 10px;
  background-color: #f5f5f5;
  border-radius: 15px;
  margin-right: 10px;
  margin-bottom: 10px;
  font-size: 14px;
}

.history-list {
  margin-top: 10px;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid #eee;
}

.history-item text {
  flex: 1;
  margin-left: 5px;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-item image {
  width: 40px;
  height: 40px;
  margin-bottom: 5px;
}

.category-item text {
  font-size: 12px;
}

.category-results {
  margin-top: 15px;
}

.result-title {
  font-size: 15px;
  color: #666;
  margin-bottom: 10px;
}

.result-card {
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 6px;
  margin-bottom: 10px;
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.card-header .title {
  font-size: 15px;
  font-weight: bold;
  flex: 1;
}

.card-header .source {
  font-size: 12px;
  color: #999;
  margin-left: 10px;
}

.card-meta {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.file-icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

.card-meta text {
  font-size: 12px;
  color: #999;
  margin-right: 10px;
}

.card-actions {
  display: flex;
  justify-content: space-between;
}

.action-btn {
  height: 28px;
  line-height: 28px;
  font-size: 12px;
  background-color: #f5f5f5;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  padding: 0 8px;
}

.action-btn icon {
  margin-right: 3px;
  flex-shrink: 0;
}