/* 全局样式 */
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', sans-serif;
}

/* 搜索头部 */
/* 调整搜索栏布局 */
.result-card {
  background: #fff;
  border-radius: 8px;
  margin: 10px 0;
  padding: 15px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.title {
  flex: 1;
  font-size: 13px;
  font-weight: 500;
  color: #333;
  word-break: break-all;
}

.source {
  margin-left: 10px;
  font-size: 12px;
  color: #07c160;
  white-space: nowrap;
}

.card-meta {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  font-size: 12px;
  color: #999;
  gap: 8px;
}

.file-icon {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

.tag {
  background: #f0f7ff;
  color: #07c160;
  padding: 2px 8px;
  border-radius: 4px;
  margin-right: 10px;
}

.time {
  margin-right: 10px;
}

.card-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  margin-left: 10px;
  font-size: 12px;
  color: #07c160;
  background: transparent;
  border: 1px solid #07c160;
  border-radius: 4px;
  padding: 0 8px;
  height: 28px;
  line-height: 28px;
}

.action-btn::after {
  border: none;
}

.action-btn icon {
  margin-right: 3px;
  vertical-align: middle;
}


/* ===== 修改所有绿色(#07c160)为蓝色 ===== */
.search-btn {
  background: #2196F3;
  /* 改为蓝色 */
}

.source {
  color: #2196F3;
  /* 改为蓝色 */
}

.tag {
  background: #e3f2fd;
  /* 浅蓝背景 */
  color: #2196F3;
  /* 蓝色文字 */
}

.action-btn {
  color: #2196F3;
  /* 蓝色文字 */
  border: 1px solid #2196F3;
  /* 蓝色边框 */
}

/* ===== 新增高亮样式 ===== */
.title em {
  color: #2196F3;
  /* 高亮关键词 */
  font-style: normal;
}


.search-bar input:focus {
  box-shadow: 0 0 0 2px rgba(33, 150, 243, 0.2);
}