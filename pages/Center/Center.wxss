/* pages/Center/Center.wxss */
.container {
  padding: 20px;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 15px;
}

.user-info {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.time {
  font-size: 12px;
  color: #999;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  display: block;
}

.body {
  font-size: 14px;
  line-height: 1.6;
  margin-bottom: 20px;
  display: block;
}

.resource-link {
  margin-top: 20px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 4px;
}

.link {
  color: #07c160;
  word-break: break-all;
}

/* 操作按钮区样式 */
.action-bar {
  margin: 15px 0;
  display: flex;
  justify-content: space-around;
  padding: 0 30px;
}

.action-btn {
  display: flex;
  align-items: center;
  background: none;
  border: none;
  font-size: 14px;
}

.action-btn image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.favorite-btn.active image {
  filter: brightness(0.8);
}

.divider {
  height: 1px;
  background-color: #eee;
  margin: 15px 0;
}

/* 评论区样式 */
.comment-section {
  margin-top: 10px;
  padding: 15px 0;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.comment-input {
  display: flex;
  margin-bottom: 20px;
}

.comment-input input {
  flex: 1;
  border: 1px solid #ddd;
  padding: 8px 12px;
  border-radius: 4px;
  margin-right: 10px;
}

.comment-list {
  margin-top: 20px;
}

.comment-item {
  display: flex;
  margin-bottom: 20px;
}

.comment-content {
  flex: 1;
  margin-left: 10px;
}

.comment-actions text {
  color: #576b95;
  font-size: 12px;
  margin-right: 10px;
}

.reply-list {
  margin-top: 10px;
  padding-left: 10px;
  border-left: 2px solid #eee;
}

.reply-item {
  display: flex;
  margin: 10px 0;
}

.reply-content {
  margin-left: 10px;
}

.reply-text {
  font-size: 14px;
  color: #333;
}

.time {
  font-size: 12px;
  color: #999;
  margin-left: 10px;
}