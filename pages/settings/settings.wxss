.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  margin-bottom: 40rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.label {
  display: block;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #999;
}

input,
textarea,
.picker {
  width: 100%;
  font-size: 26rpx;
  color: #333;
  padding: 10rpx 0;
}

textarea {
  height: 200rpx;
}

.picker {
  padding: 20rpx 0;
  color: #666;
}

.submit-btn {
  margin-top: 60rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 8rpx;
  font-size: 35rpx;
  height: 80rpx;
  line-height: 50rpx;
  text-align: center;
  box-sizing: border-box;
  letter-spacing: 5px;
}