.container {
  height: 100%;
  min-height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.swiper {
  height: 350rpx;
  width: calc(100% - 40rpx);
  border-radius: 16rpx;
  overflow: hidden;
  margin: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.swiper image {
  width: 100%;
  height: 100%;
}

.swiper-item {
  position: relative;
}

.swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.5);
}

.swiper .wx-swiper-dot-active {
  width: 24rpx;
  background: #fff;
}

.article-list {
  flex: 1;
  padding: 0 20rpx 20rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

.article-item {
  display: flex;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.content {
  flex: 1;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

